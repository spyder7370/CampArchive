<%- include('./partials/header'); -%>
<div class = "container">

	<main class="form-signin">
		<form action="/register" method="POST">
			<h1 class="h3 mb-3 fw-normal text-center">Please sign up</h1>
		
			<div class="form-floating">
			<input type="text" class="form-control" id="floatingInput" name="username" placeholder="username" requierd>
			<label for="floatingInput">Username</label>
			</div>

			<div class="form-floating">
			<input type="text" class="form-control mid-input" id="firstName" name="firstName" placeholder="first name" required>
			<label for="firstName">First Name</label>
			</div>

			<div class="form-floating">
			<input type="text" class="form-control mid-input" id="lastName" name="lastName" placeholder="last name" required>
			<label for="lastName">Last Name</label>
			</div>

			<div class="form-floating">
			<input type="email" class="form-control mid-input" id="useremail" name="email" placeholder="email" required>
			<label for="useremail">Email ID</label>
			</div>

			<div class="form-floating">
			<input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
			<label for="floatingPassword">Password</label>
			</div>

			<button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
		</form>
	</main>
	<div class="form-signin">
		<span>Already have an account? login </span><a href ="/login">here</a>
	</div>
	<div class="form-signin">
		<a href ="/campgrounds">Go back</a>
	</div>
	
</div>
<%- include('./partials/footer'); -%>