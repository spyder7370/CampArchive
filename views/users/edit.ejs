<%- include('../partials/header'); -%>
<div class = "container">
	<div class="row justify-content-center">
		
		<main class="form-signin">
			<form action="/users/<%=user._id%>?_method=PUT" method="POST">
				<h1 class="h3 mb-3 fw-normal text-center">Edit user	<%=user.username%></h1>
			
				<div class="form-floating">
				<input type="text" class="form-control" id="floatingInput" name="user[firstName]"  value="<%=user.firstName%>" required>
				<label for="floatingInput">First Name</label>
				</div>
	
				<div class="form-floating">
				<input type="text" class="form-control" id="price" name="user[lastName]" value="<%= user.lastName %>" required>
				<label for="price">Last Name</label>
				</div>
	
				<div class="form-floating">
				<input type="email" class="form-control" id="useremail" name="user[email]" value="<%=user.email%>" required>
				<label for="useremail">Email ID</label>
				</div>
	
				<div class="form-floating">
				<input type="text" class="form-control" id="location" name="user[avatar]" value="<%=user.avatar%>" required>
				<label for="location">Avatar URL</label>
				</div>
	
				<div class="form-floating">
				<textarea class="form-control" name="user[about]" id="useredit" style="height: 100px" required><%=user.about%></textarea>
				<label for="useredit">About Me</label>
				</div>
	
				<button class="w-100 btn btn-lg btn-primary" type="submit">Edit User Details</button>
			</form>
			<div class="mt-3">
				<a href ="/users/<%= user._id %>">Go back</a>
			</div>	
		</main>











