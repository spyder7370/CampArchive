<%- include('../partials/header'); -%>
<div class = "container">
	<div class="row justify-content-center">
		
		<main class="form-signin">
			<form action="/campgrounds" method="POST">
				<h1 class="h3 mb-3 fw-normal text-center">Add a new campground</h1>
			
				<div class="form-floating">
				<input type="text" class="form-control" id="floatingInput" name="campground[name]" placeholder="Salmon Creak" required>
				<label for="floatingInput">Name</label>
				</div>
	
				<div class="form-floating">
				<input type="number" class="form-control" id="price" name="campground[price]" placeholder="20.00" min="0.00" step="0.01" required>
				<label for="price">Price</label>
				</div>
	
				<div class="form-floating">
				<input type="text" class="form-control" id="image" name="campground[image]" placeholder="Image URL" required>
				<label for="image">Image URL</label>
				</div>
	
				<div class="form-floating">
				<input type="text" class="form-control" id="location" name="campground[location]" placeholder="Delhi, India" required>
				<label for="location">Location</label>
				</div>
	
				<div class="form-floating">
				<textarea class="form-control" name="campground[description]" placeholder="Add a description to your campground" id="floatingTextarea2" style="height: 150px" required></textarea>
				<label for="floatingTextarea2">Description</label>
				</div>
	
				<button class="w-100 btn btn-lg btn-primary" type="submit">Add Campground</button>
			</form>
			<div class="mt-3">
				<a href ="/campgrounds">Go back</a>
			</div>	
		</main>
		




