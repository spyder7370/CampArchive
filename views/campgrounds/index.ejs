<%- include('../partials/header'); -%>

<div class="container">
	<header class="h-100 p-5 bg-light border rounded-3 mb-4">
		<div class="container">
			<h1><i class="fas fa-campground"></i> Welcome to Camp Archive!!</h1>
			<p>View our handpicked campgrounds from all over the world</p>
			<p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>	</p>
			<form class="row g-3" action="/campgrounds" method="GET">
				<div class="col-auto">
				  <input type="text" class="form-control" name="search" placeholder="Campground search ...">
				</div>
				<div class="col-auto">
				  <button type="submit" class="btn btn-outline-primary mb-3">Search</button>
				</div>
			</form>
		</div>
	</header>


	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<div class="col-md-12">
			<% if(noMatch !== null) { %>
			<h3><%= noMatch %></h3>
			<br>
			<div class="d-flex justify-content-center">
				<form class="row g-3" action="/campgrounds" method="GET">
					<div class="col-auto">
					  <input type="text" class="form-control" name="search" placeholder="Campground search ...">
					</div>
					<div class="col-auto">
					  <button type="submit" class="btn btn-outline-primary mb-3">Search</button>
					</div>
				</form>
			</div>

			<% } %>
		</div>
		<% for ( var i=0; i<campgrounds.length; i++){ %>
			<div class="col-md-3 col-sm-6 mb-4">
				<div class="card">
					<img class="card-img-top" src="<%=campgrounds[i].image%>">
					<div class="card-body">
						<h5 class="card-title"><%=campgrounds[i].name%></h5>
						<a href="/campgrounds/<%= campgrounds[i]._id%>" class="btn btn-primary">More Info</a>
					</div>
				</div>
			</div>
			<br>
		<% } %>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer'); -%>